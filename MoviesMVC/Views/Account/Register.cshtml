@model RegisterVM

@{
    ViewData["Title"] = "Register";
    @* Layout = null; *@
}

<form class="w-40" asp-action="Register" method="post">
    <h2 class="pb-10">Register</h2>

    <div class="input-container">
        <label asp-for="Name" class="w-40">Name</label>
        <input type="text" class="input" asp-for="Name">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Name"></span>
    </div>


    <div class="input-container">
        <label asp-for="Email" class="w-40">Email</label>
        <input type="text" class="input" asp-for="Email">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Email"></span>
    </div>


    <div class="input-container">
        <label asp-for="Password" class="w-40">Password</label>
        <input type="password" class="input" asp-for="Password">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Password"></span>
    </div>


    <div class="input-container">
        <label asp-for="ConfirmPassword" class="w-40">Password</label>
        <input type="password" class="input" asp-for="ConfirmPassword">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="ConfirmPassword"></span>
    </div>

    @if (ViewBag.RegisterError is not null)
    {
        <div class="alert mb-1">
            @ViewBag.RegisterError
        </div>
    }

    <div class="input-container">
        <button class="btn btn-default" type="submit">Register</button>
    </div>
</form>