@model ItemVM

@{
    ViewData["Title"] = "Create";
}

<form class="w-40" asp-action="Create" method="post">

    <div style="display: flex; width: 100vw;">
        <label asp-for="ItemName" style="width: 10%;">Create Name</label>
        <input type="text" class="input" style="width: 50%;" placeholder="Genre name..." asp-for="ItemName">
        <button class="btn btn-default" type="submit">Save</button>
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="ItemName"></span>
    </div>

    @if (TempData["CreateError"] is not null)
    {
        <div class="alert mb-1">
            @TempData["CreateError"]
        </div>
    }

</form>