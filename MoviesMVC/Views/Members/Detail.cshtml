                <div style="margin-bottom: 20px;">
                <h3 style="margin-right: 20px;">
                    <img src="~/Images/@Model.MemberImage" style="width: auto; height: 270px; object-fit: cover;" class="img-thumbnail" />
                </h3> 
            </div>
            }
        </div>
        <div>
            @* <dt style="margin-bottom: 20px;">
