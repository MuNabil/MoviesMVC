@model UserRolesVM

@{
    ViewData["Title"] = "ManageRoles";
}

<form method="post">

    <div class="mt-4">
        <div>
            <h2>@Model.Email</h2>
            Add/Remove Roles
        </div>
        <div>
            <input type="hidden" asp-for="@Model.UserId" />
            @for (var i = 0; i < Model.Roles?.Count; i++)
            {
                <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                <label asp-for="@Model.Roles[i].IsSelected" style="margin: 3% 0;">
                    <input type="checkbox" asp-for="@Model.Roles[i].IsSelected"> 
                    @Model.Roles[i].RoleName
                </label>
            }
            <div class="message-box pd-x-28 error">
                <span asp-validation-for="Roles"></span>
            </div>
            @if (ViewBag.RolesError is not null)
            {
                <div class="alert mb-1">
                    @ViewBag.RolesError
                </div>
            }
        </div>
        <div>
            <button type="submit" class="btn btn-default">Save</button>
            <a asp-action="Index" class="btn btn-sec">Cancel</a>
        </div>
    </div>

</form>